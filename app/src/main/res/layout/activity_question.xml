<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:background="@drawable/whizz_background">

    <TextView
        android:id="@+id/question_displayPlace"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:backgroundTint="#C9FEFB"
        android:background="@drawable/whiterectangle" />

    <Button
        android:id="@+id/question_answer1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Answer 1"
        android:textColor="#3AAAA4"
        android:backgroundTint="#0B323D"
        android:layout_below="@id/question_displayPlace"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/question_answer2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Answer 2"
        android:textColor="#3AAAA4"
        android:backgroundTint="#0B323D"
        android:layout_below="@id/question_answer1"/>
    <Button
        android:id="@+id/question_answer3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Answer 3"
        android:textColor="#3AAAA4"
        android:backgroundTint="#0B323D"
        android:layout_below="@id/question_answer2"/>
    <Button
        android:id="@+id/question_answer4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Answer 4"
        android:textColor="#3AAAA4"
        android:backgroundTint="#0B323D"
        android:layout_below="@id/question_answer3"/>

</RelativeLayout>